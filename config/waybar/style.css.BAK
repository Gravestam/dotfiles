/* scheme: "Tokyo Night Dark" */
@define-color base00 #1A1B26;
@define-color base01 #16161E;
@define-color base02 #2F3549;
@define-color base03 #444B6A;
@define-color base04 #787C99;
@define-color base05 #A9B1D6;
@define-color base06 #CBCCD1;
@define-color base07 #D5D6DB;
@define-color base08 #C0CAF5;
@define-color base09 #A9B1D6;
@define-color base0A #0DB9D7;
@define-color base0B #9ECE6A;
@define-color base0C #B4F9F8;
@define-color base0D #2AC3DE;
@define-color base0E #BB9AF7;
@define-color base0F #F7768E;

* {
  font-family: FontAwesome, Roboto, Helvetica, Arial, sans-serif;
  border: none;
  border-radius: 0px;
}

window#waybar {
  background-color: rgba(0, 0, 0, 0.8);
  border-bottom: 0px solid #ffffff;
  background: @base00;
  transition-property: background-color;
  transition-duration: 0.5s;
  opacity: 0.85;
}

/* -----------------------------------------------------
 * Workspaces
 * ----------------------------------------------------- */

#workspaces {
  border: 0px;
  font-weight: bold;
  font-style: normal;
  font-size: 16px;
  color: @base05;
}

#workspaces button {
  padding: 0px 5px;
  margin: 4px 3px;
  border-radius: 5px;
  border: 0px;
  color: @base05;
  background-color: @base00;
  transition: all 0.15s ease-in-out;
  opacity: 0.6;
  border: solid 1px @comment;
}

#workspaces button.active {
  color: @base05;
  border-color: @base0B;
  min-width: 40px;
  transition: all 0.15s ease-in-out;
  opacity: 1;
}

#workspaces button:hover {
  opacity: 0.95;
}

/* -----------------------------------------------------
 * Tooltips
 * ----------------------------------------------------- */

tooltip {
  border-radius: 5px;
  background-color: @base00;
  opacity: 0.85;
  padding: 20px;
  margin: 0px;
}

tooltip label {
  color: @base05;
}

/* -----------------------------------------------------
 * Window
 * ----------------------------------------------------- */

#window {
  background: @base00;
  padding: 2px 10px 0px 10px;
  border-radius: 5px;
  color: @base05;
  font-size: 16px;
  font-weight: normal;
  opacity: 0.8;
}

window#waybar.empty #window {
  background-color: transparent;
}

/* -----------------------------------------------------
 * Taskbar
 * ----------------------------------------------------- */

#taskbar {
  padding: 0px;
  font-weight: normal;
  font-style: normal;
}

#taskbar button {
  margin: 0;
  padding: 0px 5px 0px 5px;
}

/* -----------------------------------------------------
 * Modules
 * ----------------------------------------------------- */

.modules-left > widget:first-child > #workspaces {
  margin-left: 0;
}

.modules-right > widget:last-child > #workspaces {
  margin-right: 0;
}

/* -----------------------------------------------------
 * Clock
 * ----------------------------------------------------- */

#clock {
  font-size: 16px;
  color: @base05;
  padding: 1px 10px 0px 10px;
}

/* -----------------------------------------------------
 * Language layout
 * ----------------------------------------------------- */
#language {
  font-size: 16px;
  color: @base05;
  padding: 1px 10px 0px 10px;
}

/* -----------------------------------------------------
 * Pulseaudio
 * ----------------------------------------------------- */

#pulseaudio {
  font-size: 16px;
  color: @base05;
  border-radius: 15px;
  padding: 2px 10px 0px 10px;
}

#pulseaudio.muted {
  color: @base05;
}

/* -----------------------------------------------------
 * Network
 * ----------------------------------------------------- */

#network {
  font-size: 16px;
  color: @base05;
  border-radius: 15px;
  padding: 2px 10px 0px 10px;
}

#network.ethernet {
  color: @base05;
}

#network.wifi {
  color: @base05;
}

/* -----------------------------------------------------
 * Bluetooth
 * ----------------------------------------------------- */

#bluetooth,
#bluetooth.on,
#bluetooth.connected {
  font-size: 16px;
  color: @base05;
  border-radius: 15px;
  padding: 2px 10px 0px 10px;
}

#bluetooth.off {
  background-color: transparent;
  padding: 0px;
  margin: 0px;
}

/* -----------------------------------------------------
 * Battery
 * ----------------------------------------------------- */

#battery {
  font-size: 16px;
  color: @base05;
  border-radius: 15px;
  padding: 2px 15px 0px 10px;
}

#battery.charging,
#battery.plugged {
  color: @base05;
}

#battery.critical:not(.charging) {
  color: @base07;
}

/* -----------------------------------------------------
 * Tray
 * ----------------------------------------------------- */

#tray {
  padding: 0px 15px 0px 0px;
}

#tray > .passive {
  -gtk-icon-effect: dim;
}

#tray > .needs-attention {
  -gtk-icon-effect: highlight;
}
